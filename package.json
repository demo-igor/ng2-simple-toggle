{
  "name": "ng2-simple-toggle",
  "description": "Angular 2 toggle (inpup[type=checkbox]) component. Supports Reactive Forms and NgModel",
  "main": "dist/bundles/simple-toggle.umd.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all -s build:*",
    "postbuild": "npm run prepare-package",
    "build:main": "npm run ng-copy && npm run ng-inline && npm run ngc",
    "postbuild:main": "rimraf dist/tmp",
    "build:umd": "rollup -c rollup.config.js",
    "postbuild:umd": "uglifyjs -c --screw-ie8 --comments -o dist/bundles/simple-toggle.umd.min.js dist/bundles/simple-toggle.umd.js",
    "ng-copy": "copyup src/index.ts dist/tmp && ncp src dist/tmp",
    "ng-inline": "ng2-inline -u 1 -o dist/tmp -r src/**/*.component.ts",
    "prepare-package": "node scripts/release.js",
    "ngc": "ngc -p tsconfig.release.json"
  },
  "keywords": [
    "ng2",
    "toggle"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/demo-igor/ng2-simple-toggle.git"
  },
  "author": "Igor Demo <demoigor@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-server": "^4.0.0",
    "@types/core-js": "^0.9.43",
    "@types/jasmine": "^2.6.3",
    "@types/node": "^7.0.15",
    "angular2-inline-template-style": "^1.2.0",
    "chokidar": "^1.7.0",
    "codelyzer": "^2.0.0",
    "copyfiles": "^1.2.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.6.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.51.3",
    "rollup-globals-regex": "0.0.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rxjs": "^5.5.2",
    "tslib": "^1.6.1",
    "typescript": "^2.2.2",
    "uglifyjs": "^2.4.11",
    "zone.js": "^0.8.4"
  },
  "version": "0.0.3"
}
